<!DOCTYPE html>
<html ng-app = "Restaurant">
  <head>
      <meta name = "viewport" content = "width = device-width , initial-scale=1.0">
      <link href = "stylesheets/bootstrap.min.css" rel = "stylesheet">
      <script src="javascripts/angular.min.js"></script>
  </head>
  <body ng-controller="MenuController">
    <div class="container">
      <div class="row">
    <div class="panel panel-primary col-md-5">
      <div class="panel-heading"><strong>Menu</strong></div>
      <div class="panel-body">
        <table class="table col-md-8">
          <thead>
          <th>Item Name</th>
          <th>Price</th>
          <th>Selection</th>
          </thead>
            <tr ng-repeat="x in items ">
              <td>
                {{x.name}}
              </td>
              <td>
                {{x.price | currency}}
              </td>
              <td>
                <label><input type="checkbox" ng-model="x.selected"></label>
              </td>
            </tr>
        </table>
      </div>
      <div class="panel-footer"> <button class = "btn btn-primary" ng-click="showPanel=true">Show Receipt</button></div>
    </div>
    <div class="panel panel-danger col-md-offset-2 col-md-5" ng-show="showPanel">
      <div class="panel-heading"><strong>Receipt</strong></div>
      <div class="panel-body">
        <table class="table col-md-8">
          <thead>
          <th>Item Name</th>
          <th>Price</th>
          </thead>
          <tr ng-repeat="x in items" ng-if="x.selected === true">
            <td>
              {{x.name}}
            </td>
            <td>
              {{x.price | currency}}
            </td>
          </tr>
        </table>
      </div>
      <div class="panel-footer"> <strong> Total: {{getTotal() | currency}}  </strong>
      </div>
    </div>
      </div>
      </div>
  </body>
<script src="javascripts/bootstrap.min.js"></script>
<script src="javascripts/restaurantHandler.js"></script>
</html>
